<p id="notice"><%= notice %></p>

<h3>Listing Posts</h3>
<br><br><br>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Category</th>
      <th>Author</th>
      <th>Status</th>
 <!--     <th>Edit by</th>  -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content[0..100] %></td>
        <td><%= post.category.name %></td>
        <td><%= post.user.email %></td>

          <td>
          <% if post.status  %>
           publiched
           <% else %> 
         unpublished
       <%  end %>
     </td>

   <!--     <td><%= post.edit_by %></td>   -->
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

